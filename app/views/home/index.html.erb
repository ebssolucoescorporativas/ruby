<h1>Home#index</h1>
<p>Hello <%= @email %></p>

<% if user_signed_in? %>
    <% if current_user.restaurant? %>
        <p>Seus produtos, <%= current_user.restaurant.name %></p>
            <table>
                <thead>
                    <tr>
                        <th>nome</th>
                        <th>valor</th>
                    </tr>
                </thead>

                <tbody>
                    <% current_user.restaurant.product.each do |p| %>
                        <tr>
                            <td><%= p.name %></td>
                            <td><%= p.value %></td>
                        </tr>
                    <%end%>
                </tbody>
            </table>
    <% end %>
<% end %>
